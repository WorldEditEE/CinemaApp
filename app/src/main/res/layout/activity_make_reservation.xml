<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeReservation">

    <ImageView
        android:id="@+id/moviePosterImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wonderw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewScreen"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moviePosterImageView"
        app:srcCompat="@drawable/screen_rectangle"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="30dp"
        android:text="SCREEN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewScreen"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewMovieTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="13:00"
        android:textColor="#BCD8D8D8"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/moviePosterImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridView
        android:id="@+id/gridPlaces"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:columnWidth="40dp"
        android:gravity="center"
        android:horizontalSpacing="15dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="12dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/screen" />

    <TextView
        android:id="@+id/placesInfoTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:text="selected"
        app:layout_constraintTop_toBottomOf="@id/gridPlaces"
        android:drawableLeft="@drawable/ic_stop_black_24dp"
        android:drawableTint="@color/purple_700"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/placesInfoTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginRight="40dp"
        android:text="available"
        app:layout_constraintTop_toBottomOf="@id/gridPlaces"
        android:drawableLeft="@drawable/ic_stop_black_24dp"

        app:layout_constraintRight_toLeftOf="@+id/placesInfoTextView2" />

    <TextView
        android:id="@+id/placesInfoTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/gridPlaces"
        android:layout_marginLeft="40dp"
        android:text="sold"
        android:drawableLeft="@drawable/ic_stop_black_24dp"
        android:drawableTint="@android:color/darker_gray"

        app:layout_constraintLeft_toRightOf="@+id/placesInfoTextView2" />

    <Button
        android:id="@+id/buttonBuyTickets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:onClick="onClickBuyTickets"
        android:text="Купить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placesInfoTextView2" />


</androidx.constraintlayout.widget.ConstraintLayout>